  <%= render 'header' %>
  <h1><%= pluralize(@movies.size, 'Movie') %></h1>
  <ul>

    <a href="/movies">All Movies</a>

    <% @movies.each do |movie| %>

    <article>
      <article class="movie">
      <header>
        <h2><%= movie.name %></h2>
        <%= link_to(movie.name, movie) %>

        <%= image_tag(movie.image_file_name) %>
        <h2><%= link_to movie.name, movie %></h2>
        <h3><%= movie.cast %></h3>
      </header>
      <p>
        <%= truncate(movie.description, length: 40, separator: ' ') %>
      </p>
      <table>
        <tr>
          <th>Released:</th>
          <td><%= movie.released_on.to_s %></td>

        </tr>
        <tr>
          <th>Duration:</th>
          <td><%= movie.duration %></td>
        </tr>
        <tr>
          <th>Total Gross:</th>
          <td><%= number_to_currency(movie.price) %></td>
        </tr>
      </table>
    </article>
    <% end %>
  </ul>


  <%= link_to("Add New Movie", new_movie_path) %>
  <%= render 'footer' %>
