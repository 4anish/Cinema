  <%= render 'header' %>
  <%= link_to("All Movies", root_path) %>
  <%= link_to pluralize(@movie.reviews.size, "review"),
            movie_reviews_path(@movie) %>

  <article>
    <header>
      <h1><%= @movie.name%></h1>
    </header>
    <h2>Description</h2>
    <p>
      <%= @movie.description %>
    </p>
    <h3>Released On</h3>
    <p>
      <%= @movie.released_on %>
    </p>
    <h3>Total Gross</h3>
    <p>
      <%= format_total_gross(@movie) %>
    </p>
    <h3>Cast</h3>
    <p>
      <%= @movie.cast %>
    </p>

    <h3>Director</h3>
    <p>
      <%= @movie.director %>
    </p>

    <h3>Duration</h3>
    <p>
      <%= @movie.duration %>
    </p>

    <h3>Image</h3>
    <%= image_tag(@movie.image_file_name) %>

    <h3>Average Review</h3>
    <p>
      <%= format_average_stars(@movie) %>
    </p>
  </article>

  <nav>
    <%= link_to "All Movies", movies_path %>
    <%= link_to "Edit", edit_movie_path(@movie) %>
    <%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>
  </nav>


  <%= render 'footer' %>
